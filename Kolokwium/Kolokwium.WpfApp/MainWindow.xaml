<Window x:Class="Kolokwium.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="ButtonAddEditStudentWindowShow" Content="Add or Edit student" HorizontalAlignment="Left"
Margin="20,32,0,0" VerticalAlignment="Top" Width="150" Height="50" RenderTransformOrigin="0.152,1.332"
Click="ButtonAddEditStudentWindowShow_Click" />
        <DockPanel Height="287" LastChildFill="False" Margin="10,0,0,0" VerticalAlignment="Bottom"
Grid.ColumnSpan="2">
            <DataGrid x:Name="DataGridStudents" AutoGenerateColumns="False" DockPanel.Dock="Bottom" Height="275"
VerticalAlignment="Top" Margin="10,0,9.4,0" SelectionMode="Single" />
        </DockPanel>
    </Grid>
</Window>
