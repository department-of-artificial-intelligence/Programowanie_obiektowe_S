<Window x:Class="Lab08.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab08.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid Margin="0,0,0,-51">
        <DataGrid x:Name="DataGridStudents" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGridStudents_SelectionChanged" Margin="0,122,0,52"/>
        <Button Content="Add Student" HorizontalAlignment="Left" Margin="22,31,0,0" VerticalAlignment="Top" Height="60" Width="160"/>
        <Button Content="Delete Student" HorizontalAlignment="Left" Margin="202,31,0,0" VerticalAlignment="Top" Height="60" Width="160"/>
    </Grid>
</Window>
