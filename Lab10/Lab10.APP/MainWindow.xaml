<Window x:Class="Lab10.APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10.APP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,-32,-17">
        <Button Width="100" Height="75" Margin="-550,-360,0,0" Click="ButtonAddEditStudentWindowShow_Click">Add/edit student</Button>
        <Button Width="100" Height="75" Margin="-325,-360,0,0" Click="ButtonRemoveStudentWindowShow_Click">Remove student</Button>
        <Button Width="100" Height="75" Margin="-100,-360,0,0" Click="ButtonAddGradeWindowShow_Click">Add grade</Button>
        <DataGrid Margin="90" Name="DataGridStudents" AutoGenerateColumns="False" SelectionMode="Single">
        </DataGrid>
    </Grid>
</Window>
