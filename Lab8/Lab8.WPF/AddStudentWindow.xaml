<Window x:Class="Lab8.WPF.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8.WPF"
        mc:Ignorable="d"
        Title="AddStudent" Height="363" Width="297">
    <Grid Margin="10,10,10,10">
        <TextBox x:Name="TextBoxFirstname" HorizontalAlignment="Left" Margin="69,91,0,0" TextWrapping="Wrap" Text="Firstname:" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxSurname" HorizontalAlignment="Left" Margin="69,114,0,0" TextWrapping="Wrap" Text="Surname:" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxFaculty" HorizontalAlignment="Left" Margin="69,137,0,0" TextWrapping="Wrap" Text="Faculty:" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxStudentNo" HorizontalAlignment="Left" Margin="69,0,0,0" TextWrapping="Wrap" Text="Student No.:" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="ButtonConfirm" Content="Add Student" HorizontalAlignment="Center" Height="63" Margin="0,242,0,0" VerticalAlignment="Top" Width="236"/>

    </Grid>
</Window>
