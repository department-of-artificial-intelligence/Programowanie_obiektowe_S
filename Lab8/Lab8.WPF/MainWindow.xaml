<Window x:Class="Lab8.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonAddStudent" Content="AddStudent" HorizontalAlignment="Left" Height="52" Margin="31,38,0,0" VerticalAlignment="Top" Width="85" Click="ButtonAddStudent_Click"/>
        <Button x:Name="ButtonDeleteStudent" Content="Delete Student" HorizontalAlignment="Left" Height="52" Margin="156,38,0,0" VerticalAlignment="Top" Width="85" Click="ButtonDeleteStudent_Click"/>
        <DataGrid x:Name="DataGridStudents" HorizontalAlignment="Left" Height="240" Margin="31,131,0,0" VerticalAlignment="Top" Width="733" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
