<Window x:Class="Lab8.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" Background="Gray">
    <Grid>
        <Button x:Name="Button_Add" Content="Add student" HorizontalAlignment="Left" Margin="100,30,0,0" VerticalAlignment="Top" Height="70" Width="150" Click="Add_Student" FontSize="20"/>
        <Button x:Name="Button_Delete" Content="Delete student" HorizontalAlignment="Right" Margin="0,30,100,0" VerticalAlignment="Top" Height="70" Width="150" Click="Delete_Student" FontSize="20"/>
        <DataGrid x:Name="Student_Grid" Margin="0,130,0,0"/>

    </Grid>
</Window>
