<Window x:Class="Lab11.WpfApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:Lab11.WpfApp"
mc:Ignorable="d"
Title="Students" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="ButtonAddEditStudentWindowShow" Content="Add or Edit student" HorizontalAlignment="Left"
Margin="20,32,0,0" VerticalAlignment="Top" Width="150" Height="50" RenderTransformOrigin="0.152,1.332"
Click="ButtonAddEditStudentWindowShow_Click" />
        <Button x:Name="ButtonRemoveStudentWindowShow" Content="Delete student" HorizontalAlignment="Left"
Margin="175,32,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="ButtonRemoveStudentWindowShow_Click" />
        <DockPanel Height="287" LastChildFill="False" Margin="10,0,0,0" VerticalAlignment="Bottom"
Grid.ColumnSpan="2">
            <DataGrid x:Name="DataGridStudents" AutoGenerateColumns="False" DockPanel.Dock="Bottom" Height="275"
VerticalAlignment="Top" Margin="10,0,9.4,0" SelectionMode="Single" />
        </DockPanel>
        <Button x:Name="ButtonAddGradeWindowShow" Content="AddGrade" HorizontalAlignment="Left" Margin="330,32,0,0"
VerticalAlignment="Top" Width="150" Height="50" Click="ButtonAddGradeWindowShow_Click" />
    </Grid>
</Window>