<Window x:Class="Lab7.WpfApp.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab7.WpfApp"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid x:Name="Calkulator_Layer">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Button_1" Content="1" HorizontalAlignment="Left" Height="55" Margin="33,155,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_1_Click"/>
        <Button x:Name="Button_2" Content="2" HorizontalAlignment="Left" Height="55" Margin="99,155,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_2_Click"/>
        <Button x:Name="Button_3" Content="3" HorizontalAlignment="Left" Height="55" Margin="165,155,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_3_Click"/>
        <Button x:Name="Button_4" Content="4" HorizontalAlignment="Left" Height="55" Margin="33,215,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_4_Click"/>
        <Button x:Name="Button_5" Content="5" HorizontalAlignment="Left" Height="55" Margin="99,215,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_5_Click"/>
        <Button x:Name="Button_6" Content="6" HorizontalAlignment="Left" Height="55" Margin="165,215,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_6_Click"/>
        <Button x:Name="Button_7" Content="7" HorizontalAlignment="Left" Height="55" Margin="33,275,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_7_Click"/>
        <Button x:Name="Button_8" Content="8" HorizontalAlignment="Left" Height="55" Margin="99,275,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_8_Click"/>
        <Button x:Name="Button_9" Content="9" HorizontalAlignment="Left" Height="55" Margin="165,275,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_9_Click"/>
        <TextBlock x:Name="TextBlock_Result" HorizontalAlignment="Left" Height="74" Margin="145,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" FontSize="36" TextAlignment="Right" Text="0"/>
        <Button x:Name="Button_0" Content="0" HorizontalAlignment="Left" Height="55" Margin="99,335,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_0_Click"/>
        <Button x:Name="Button_Plus" Content="+" HorizontalAlignment="Left" Height="81" Margin="278,163,0,0" VerticalAlignment="Top" Width="96" FontSize="36" Click="Button_Plus_Click"/>
        <Button x:Name="Button_Minus" Content="-" HorizontalAlignment="Left" Height="81" Margin="379,163,0,0" VerticalAlignment="Top" Width="96" FontSize="36" Click="Button_Minus_Click"/>
        <Button x:Name="Button_Multiply" Content="*" HorizontalAlignment="Left" Height="80" Margin="278,249,0,0" VerticalAlignment="Top" Width="96" FontSize="36" Click="Button_Multiply_Click"/>
        <Button x:Name="Button_Div" Content="/" HorizontalAlignment="Left" Height="81" Margin="379,249,0,0" VerticalAlignment="Top" Width="96" FontSize="36" Click="Button_Div_Click"/>
        <Button x:Name="Button_Result" Content="=" HorizontalAlignment="Left" Height="80" Margin="592,222,0,0" VerticalAlignment="Top" Width="124" FontSize="36" Click="Button_Result_Click"/>
        <Button x:Name="Button_DOT" Content="," HorizontalAlignment="Left" Height="55" Margin="165,335,0,0" VerticalAlignment="Top" Width="61" FontSize="24" Click="Button_DOT_Click"/>
        <Button x:Name="Clear" Content="CE" HorizontalAlignment="Left" Height="70" Margin="592,320,0,0" VerticalAlignment="Top" Width="124" FontSize="36" Click="Clear_Click"/>

    </Grid>
</Window>
