<Window x:Class="Lab8.Wpfapp.DeleteStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8.Wpfapp"
        mc:Ignorable="d"
        Title="DeleteStudentWindow" Height="200" Width="400">
    <Grid>
        <Button x:Name="btnDeleteStudent" Content="Delete Student" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="150" Height="40" Click="btnDeleteStudent_Click"/>
        <Button x:Name="btnBackToMain" Content="Return" HorizontalAlignment="Right" Margin="0,90,10,0" VerticalAlignment="Top" Width="150" Height="40" Click="btnBackToMain_Click"/>
        <TextBlock x:Name="textOutput" VerticalAlignment="Top" Text="Student id:" TextWrapping="Wrap" TextAlignment="Left" Height ="20" FontSize="16" Margin="10,33,200,0" RenderTransformOrigin="0.5,0.5"></TextBlock>
        <TextBox x:Name="idInput" VerticalAlignment="Top" TextWrapping="Wrap" TextAlignment="Right" Height ="20" FontSize="16" Margin="200,34,10,0" TextChanged="TextBox_TextChanged" Text=""/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="20" Margin="10,34,0,0" VerticalAlignment="Top" Width="190"/>

    </Grid>
</Window>
