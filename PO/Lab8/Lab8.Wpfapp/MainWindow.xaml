<Window x:Class="Lab8.Wpfapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8.Wpfapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Button x:Name="AddStudentButton" Content="Add student" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Height="40" Width="80" Click="AddStudentButton_Click"/>
        <Button Name="DeleteStudentButton" Content="Delete student" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Height="40" Width="80" Click="DeleteStudentButton_Click"/>
        <DataGrid Name="DataGridStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,66,0,0" Width="480"/>
    </Grid>
</Window>
