<Window x:Class="PO.Lab08.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PO.Lab08.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddButton" Content="Add Student" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Width="120" Height="40" Click="Click"/>
        <Button x:Name="DeleteButton" Content="Delete Student" HorizontalAlignment="Left" Margin="170,25,0,0" VerticalAlignment="Top" Width="120" Height="40" Click="Click"/>
        <DataGrid x:Name="DataStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,90,0,0"/>

    </Grid>
</Window>
