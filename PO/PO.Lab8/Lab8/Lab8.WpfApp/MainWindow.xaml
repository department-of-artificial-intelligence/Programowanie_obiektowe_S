<Window x:Class="Lab8.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8.WpfApp"
        mc:Ignorable="d"
        Title="Students" Height="350" Width="650">
    <Grid x:Name="MainGrid" Background="#ffdadada">
        <DataGrid x:Name="DataGridStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,70,0,0"/>
        <Button x:Name="BTN_Add_Student" Content="Add Student" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="50" Width="150" FontSize="18" Click="BTN_Add_Student_Click"/>
        <Button x:Name="BTN_Delete" Content="Delete Student" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top" Height="50" Width="150" FontSize="18" Click="BTN_Delete_Click"/>
        <Button x:Name="BTN_Add_Grade" Content="Add Grade" HorizontalAlignment="Left" Margin="390,10,0,0" VerticalAlignment="Top" Height="50" Width="150" FontSize="18" Click="BTN_Add_Grade_Click"/>
    </Grid>
</Window>
