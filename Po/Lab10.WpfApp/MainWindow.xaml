<Window x:Class="Lab10.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,168,0,0">
        <DataGrid x:Name="DataGridStudents" AutoGenerateColumns="False" DockPanel.Dock="Bottom" Height="275"
VerticalAlignment="Top" Margin="10,0,9.4,0" SelectionMode="Single" />
        <Button x:Name="AddOrEditStudent" Content="Add or Edit Student" HorizontalAlignment="Left" Margin="32,-140,0,0" VerticalAlignment="Top" Width="124" Height="40" Click="AddOrEditStudent_Click"/>
        <Button x:Name="DeleteStudent" Content="Delete Student" HorizontalAlignment="Left" Margin="161,-140,0,0" VerticalAlignment="Top" Width="124" Height="40" Click="DeleteStudent_Click"/>
        <Button x:Name="AddGrade" Content="Add Grade" HorizontalAlignment="Left" Margin="290,-140,0,0" VerticalAlignment="Top" Width="124" Height="40" Click="AddGrade_Click"/>
        <DatePicker HorizontalAlignment="Left" Margin="32,-68,0,0" VerticalAlignment="Top" Width="382" Height="37"/>

    </Grid>
</Window>
