<Window x:Class="Kolokwium.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="AddOrEditParkingButton" Content="Add or Edit Parking" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="45" Width="150" Click="AddOrEditParkingButtonClick"/>
        <Button x:Name="DeleteParkingButton" Content="Delete parking" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Height="45" Width="150" Click="DeleteParkingButtonClick"/>
        <Button x:Name="AddCarButton" Content="Add Car" HorizontalAlignment="Left" Margin="350,10,0,0" VerticalAlignment="Top" Height="45" Width="150" Click="AddCarButtonClick"/>
        <DockPanel Height="287" LastChildFill="False" Margin="10,0,0,0" VerticalAlignment="Bottom"
Grid.ColumnSpan="2">
            <DataGrid x:Name="DataGridParkings" AutoGenerateColumns="False" DockPanel.Dock="Bottom" Height="275"
VerticalAlignment="Top" Margin="10,0,9.4,0" SelectionMode="Single" />
        </DockPanel>
    </Grid>
</Window>
