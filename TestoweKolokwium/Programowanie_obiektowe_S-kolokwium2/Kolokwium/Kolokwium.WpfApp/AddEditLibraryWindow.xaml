<Window x:Class="Kolokwium.WpfApp.AddEditLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium.WpfApp"
        mc:Ignorable="d"
        Title="AddEditLibraryWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="269,141,0,0" TextWrapping="Wrap" Text="Name:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="269,186,0,0" TextWrapping="Wrap" Text="Adress:" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" Text="{ Binding Path = Name, Mode = TwoWay}" HorizontalAlignment="Left" Margin="363,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AdressTextBox" Text="{ Binding Path = Adress, Mode = TwoWay}" HorizontalAlignment="Left" Margin="363,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SaveLibraryButton" Content="Save" HorizontalAlignment="Left" Margin="326,250,0,0" VerticalAlignment="Top" Height="44" Width="111" Click="SaveLibraryButton_Click"/>

    </Grid>
</Window>
